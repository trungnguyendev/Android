        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:text="Clear" />

    <TextView
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:text="6" />

    <TextView
        android:layout_width="0dp"
